<!-- ===== JS: Dynamic Image Change + AOS refresh ===== -->
<script>
  function changeImage(el) {
    const target = document.getElementById('mainProductImage');
    const newSrc = el.getAttribute('data-src');
    const newAlt = el.getAttribute('data-alt') || 'Product image';
    if (!newSrc) return;

    const pre = new Image();
    pre.onload = () => {
      target.src = newSrc;
      target.alt = newAlt;
      // Keep AOS positions correct after image height/paint changes
      if (window.AOS) requestAnimationFrame(() => AOS.refreshHard());
    };
    pre.src = newSrc;

    document.querySelectorAll('.thumb-box').forEach(b => b.classList.remove('active'));
    el.classList.add('active');
  }
</script>

<style>
  /* ===== UNIFORM SQUARE GALLERY ===== */
  .product-gallery.fixed-sizes {
    --main-size: 420px;
    --thumb-size: 72px;
    --gap: 10px;
    text-align: center;
  }

  .image-box.main-box {
    width: var(--main-size);
    height: var(--main-size);
    margin: 0 auto;
    background: #f7f7f7;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 8px 22px rgba(0,0,0,.10);
  }

  .image-fit { width:100%; height:100%; object-fit: cover; display:block; }

  .thumbnail-gallery { gap: var(--gap); }

  .thumb-box {
    width: var(--thumb-size);
    height: var(--thumb-size);
    border: 2px solid transparent;
    border-radius: 8px;
    overflow: hidden;
    cursor: pointer;
    padding: 0;
    background: #fff;
    box-shadow: 0 4px 10px rgba(0,0,0,.06);
    transition: transform .15s ease, border-color .15s ease, box-shadow .15s ease;
  }
  .thumb-box:hover { transform: translateY(-2px); }
  .thumb-box.active, .thumb-box:focus { border-color: #e41e26; outline: none; }

  /* You forced a taller box below; keeping it in case you really want it.
     If you don’t, delete this override. */
  .image-box.main-box {
    width: 420px;   /* or 100% for responsive */
    height: 520px;  /* taller showcase */
  }

    /* more room before the footer */
  .service-leftside-area.sp8 { padding-bottom: 66px; }
  @media (max-width: 991.98px) { .service-leftside-area.sp8 { padding-bottom: 72px; } }
  @media (max-width: 575.98px) { .service-leftside-area.sp8 { padding-bottom: 56px; } }

  /* Tablet */
  @media (max-width: 991.98px) {
    .product-gallery.fixed-sizes {
      --main-size: 360px;
      --thumb-size: 64px;
    }
  }
  /* Mobile */
  @media (max-width: 575.98px) {
    .product-gallery.fixed-sizes {
      --main-size: 280px;
      --thumb-size: 56px;
      --gap: 8px;
    }
  }

  .size-table td, .size-table th { font-weight: 600; }
</style>
