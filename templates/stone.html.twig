{% block javascripts %}
  {{ parent() }}
  {# Remove if your base already includes AOS #}
  <script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      AOS.init({
        duration: 800,
        once: true,
        offset: 80,
        easing: 'ease-out-cubic'
      });
      setTimeout(() => AOS.refresh(), 400);
    });
  </script>
{% endblock %}
