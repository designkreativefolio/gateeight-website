<!-- ===== JS: Dynamic Image Change + AOS refresh ===== -->
<script>
  function changeImage(el) {
    const main = document.getElementById('mainProductImage');
    const pre = new Image();
    pre.onload = () => {
      main.src = el.src;
      if (window.AOS) requestAnimationFrame(() => AOS.refreshHard());
    };
    pre.src = el.src;

    document.querySelectorAll('.thumb').forEach(img => img.classList.remove('active'));
    el.classList.add('active');
  }
</script>

<style>
  .thumb {
    width: 70px;
    height: 70px;
    margin: 0 6px;
    border: 2px solid transparent;
    cursor: pointer;
    border-radius: 5px;
    object-fit: cover;
    transition: 0.3s;
  }
  .thumb.active, .thumb:hover {
    border-color: #e41e26;
    transform: scale(1.05);
  }
  .size-table td, .size-table th { font-weight: 600; }

  /* more room before the footer - extra padding element */
  .service-leftside-area.sp8 { padding-bottom: 66px; }
