{# ===== PRELOADER STARTS ===== #}
<div class="preloader {{ loader is defined ? loader : '' }}">
  <div class="loading-container">
    <div class="loading"></div>
    <div id="loading-icon">
      {% if logo3 is defined %}
        <img src="/img/logo/preloader3.png" alt="" />
      {% elseif logo4 is defined %}
        <img src="/img/logo/preloader4.png" alt="" />
      {% else %}
        <img src="/img/logo/prelodaer.png" alt="" />
      {% endif %}
    </div>
  </div>
</div>
{# ===== PRELOADER ENDS ===== #}

{# ===== PROGRESS STARTS ===== #}
<div class="paginacontainer {{ progress is defined ? progress : '' }}">
  <div class="progress-wrap">
    <svg class="progress-circle svg-content" width="100%" height="100%" viewBox="-1 -1 102 102">
      <path d="M50,1 a49,49 0 0,1 0,98 a49,49 0 0,1 0,-98" />
    </svg>
  </div>
</div>
{# ===== PROGRESS ENDS ===== #}

